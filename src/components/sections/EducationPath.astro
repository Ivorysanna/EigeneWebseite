---
import SingleFlipCard from "../SingleFlipCard.astro";
import Title from "../Title.astro";
---

<div id="education-path-anchor" class="education-path">
    <Title title="Bildungsweg" />

    <div class="cards-group">
        <SingleFlipCard title="Praktikum / Werk&shy;studenten&shy;job" dateRange="03.2021 - 12.2023" subtitle="Praktikum beu teufels; im Anschluss Werk&shy;studentin" icon="school.svg">
            <h2>Tätigkeiten</h2>
            <p class="secondInfo">Umsetzung dynamischer Web&shy;projekte mit Typo3</p>
            <p class="secondInfo">Verantwortung für die Entwicklung des Prakti-Projekts</p>
            <p class="secondInfo">Content&shy;pflege in Typo3 und Shopware</p>
            <p class="secondInfo">Internet&shy;recherche (Webseiten Testing)</p>
        </SingleFlipCard>
        <SingleFlipCard title="Medien&shy;infor&shy;matik&nbsp;B.Sc." dateRange="10.2019 - 08.2023" subtitle="Studium an der Hoch&shy;schule Furtwangen" icon="school.svg">
            <h2>Wahlpflichtfächer</h2>
            <p class="secondInfo">Interface Design</p>
            <p class="secondInfo">Zeichnen 1</p>
            <p class="secondInfo">Digital Asset Creation</p>
            <p class="secondInfo">Englisch B2.1</p>
            <p class="secondInfo">UX Research</p>
            <p class="secondInfo">Web Analytics</p>
            <p class="secondInfo">Prototyping interaktiver Medien - Apps und Games</p>
            <p class="secondInfo">Visual Novel</p>
        </SingleFlipCard>
        <SingleFlipCard title="Wirtschafts&shy;oberstufe" dateRange="09.2017 - 08.2019" subtitle="Allgemeine Hochschul&shy;reife am Beruflichen&shy;schulzentrum Waldkirch" icon="school.svg">
            <h2>Prüfungsfächer</h2>
            <p class="secondInfo">Mathematik</p>
            <p class="secondInfo">Deutsch</p>
            <p class="secondInfo">Englisch</p>
            <p class="secondInfo">BWL/VWL</p>
        </SingleFlipCard>
    </div>
</div>

<style lang="scss">
    .cards-group {
        display: flex;
        flex-direction: row;
        justify-content: center;
        width: 100%;
        margin-bottom: 5rem;

        @include respond-below(md) {
            flex-direction: column;
        }
    }

    .education-path {
        width: 100%;
    }
</style>
