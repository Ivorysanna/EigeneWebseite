    <div class="education-path">
        <h1>Bildungsweg</h1>
        <div class="small-square"></div>

        <div class="cards-group">

            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="school.svg" />
                        <h1 class="title">Medieninformatik BSc.</h1>
                        <h2>10.2019 - 08.2023</h2>
                        <p class="secondInfo">Studium an der Hochschule Furtwangen</p>
                    </div>
                    <div class="flip-card-back">
                        <h2>Wahlpflichtfächer</h2>
                        <p class="secondInfo">back</p>
                    </div>
                </div>
            </div>
    
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="school.svg" />
                        <h1 class="title">Medieninformatik BSc.</h1>
                        <h2>10.2019 - 08.2023</h2>
