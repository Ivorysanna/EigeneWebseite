---
import Layout from "../layouts/Layout.astro";
import AboutMe from '../components/AboutMe.astro';
---

<Layout>
    <AboutMe/>
    <div class="education-path">
        <h1>Bildungsweg</h1>
        <div class="small-square"></div>

        <div class="cards-group">
            <div class="card">
                <img src="school.svg">
                <h1>Medieninformatik BSc.</h1>
                <p>
                </p>
            </div>

            <div class="card">
                <img src="school.svg">
                <p>
                </p>
            </div>
        </div>
            
    </div>

</Layout>

<style>
    .education-path{
       margin: 150px 86px;  
    }
    h1{
		font-size: 20px;
		text-transform: uppercase;
	}

	.small-square{	
		margin-top: 8px;
		/* left: 0px; */
		width: 90px;
		height: 6px;
		background-color: #ddbea9;
	}

    /* CARD STYLES */
    .cards-group{
        display: flex;
        justify-content: center;
        padding: 30px 40px;
        
    }

    .card{
        /* position: absolute; */
        /* top: 100px;
        left: 100px; */
        top: 100px;
        width: 500px;
        height: 350px;
        padding: 20px;
        margin: 0 20px;
        background-color: #ddbea9;
        border-radius: 31px;
    }

    .card img{
        width: 14%;
        /* height: 100%; */
        object-fit: cover;
        border-radius: 31px;
        display: block;
        margin-left: auto;
        margin-right: auto;

    }

    .card h1{
        font-size: 20px;
        text-align: center;
        margin-top: 20px;
        text-transform: initial;
    }
</style>
